              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailSettings"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EmailSettings"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
