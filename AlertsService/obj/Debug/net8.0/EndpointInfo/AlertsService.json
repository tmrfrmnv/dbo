{
  "openapi": "3.0.1",
  "info": {
    "title": "Alerts Service API",
    "description": "Отправка уведомлений об основных действиях с аккаунтом",
    "contact": {
      "name": "Мой GitHub",
      "url": "https://github.com/tmrfrmnv"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Notification/SendEmailWithAttachment": {
      "post": {
        "tags": [
          "Notification"
        ],
        "summary": "Уведомление с вложением",
        "description": "Отправляет письмо на указанный адрес, с пользовательской темой сообщения и вложенными файлами",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "subject",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "message",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "file": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/GetEmailSettings": {
      "get": {
        "tags": [
          "Notification"
        ],
        "summary": "Вывод настроек отправителя",
        "description": "Вывод текущих настроек почты, с которой посылаются запросы",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/UpdateEmailSettings": {
      "post": {
        "tags": [
          "Notification"
        ],
        "summary": "Изменение данных отправителя",
        "description": "Обновляет данные аккаунта почты, с которого посылаются запросы",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailSettings"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailSettings"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EmailSettings"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/SendNotification": {
      "post": {
        "tags": [
          "Notification"
        ],
        "summary": "Уведомление",
        "description": "Отправка обычного сообщения с заранее подготовленной темой в самом сервисе",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "message",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/GetLastEmail": {
      "get": {
        "tags": [
          "Notification"
        ],
        "summary": "Последний получатель",
        "description": "Вывод последнего Email, на которое было отправлено письмо",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/GetSentEmailsCount": {
      "get": {
        "tags": [
          "Notification"
        ],
        "summary": "Всего уведомлений",
        "description": "Вывод общего числа отправленных писем за всё время",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EmailSettings": {
        "type": "object",
        "properties": {
          "smtpServer": {
            "type": "string",
            "nullable": true
          },
          "port": {
            "type": "integer",
            "format": "int32"
          },
          "senderName": {
            "type": "string",
            "nullable": true
          },
          "senderEmail": {
            "type": "string",
            "nullable": true
          },
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          },
          "useSSL": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  }
}